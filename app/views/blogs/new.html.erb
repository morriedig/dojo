<%= form_for @blog do |f| %>

  <div class= "form-group">
    <%= f.text_field :title, class: "form-controller" ,placeholder: "Title" %>
  </div>

  <div class="form-group">
    <%= f.text_area :content, class: "form-controller", placeholder: "Content"  %>
  </div>

  <div class="form-group">
    <%= f.label :auth%>
    <div class="form-check form-check-inline">
      <%= f.radio_button :auth, 2 , class: "form-check-input"%>
      <label class="form-check-label" for="inlineRadio1">All</label>
    </div>

    <div class="form-check form-check-inline">
      <%= f.radio_button :auth, 1 , class: "form-check-input"%>
      <label class="form-check-label" for="inlineRadio1">Friend</label>
    </div>

    <div class="form-check form-check-inline">
      <%= f.radio_button :auth, 0 , class: "form-check-input"%>
      <label class="form-check-label" for="inlineRadio1">Self</label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category_id %>
    <div class="form-check form-check-inline">
    <% Category.all.each do |category| %>
      <%= check_box_tag "blog[category_id][]", category.id, true, id: dom_id(category) , class: "form-check-input"  %> 
      <%= label_tag dom_id(category), category.title, class: "form-check-label" %> <br>
    <% end %>
    </div>
  </div>

  <div class="field">
    <%= f.label :state %>
    <span class="badge "> <%= @blog.state%> </span>
  </div>

  <div class="actions btn-inline">
      <% if @blog.state %>
        <%= f.submit 'Unpublish', class: 'btn btn-outline-secondary' %>
        <%= f.submit 'Update', class: 'btn btn-outline-primary' %>
      <% else%>
        <%= f.submit 'Draft', class: 'btn btn-secondary' %>
        <%= f.submit 'Publish', class: 'btn btn-primary' %>
      <% end %>
    </div>
<% end %>