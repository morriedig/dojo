<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1>Dojo Forum</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <ul class= "nav nav-pills">
      <li role= "presentation" class= "nav-item" ><%= link_to "All", root_path, class: "nav-link active"%></li>
      <% @categories.each do |category| %>
        <li role= "presentation" class= "nav-item" ><%= link_to category.title, category_path(category), class: "nav-link" %></li>
      <% end %>
    </ul>
  </div>
  <br>
  <div>
    <%= link_to "create", new_blog_path%>
  </div>
  <div class="row">
    <ul>
      <% @blogs.each do |blog| %>
        <%= render "shared/blog_list", blog: blog %>
      <% end %>
    </ul>
    
  </div>
</div>

